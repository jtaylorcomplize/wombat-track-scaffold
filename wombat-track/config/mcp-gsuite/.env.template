# MCP GSuite Configuration Template
# WT-MCPGS-1.0 - Environment Variables

# Google OAuth Credentials (Required)
GOOGLE_OAUTH_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_client_secret_here

# User Configuration
USER_GOOGLE_EMAIL=admin@yourdomain.com

# Google Custom Search (Optional - for search functionality)
GOOGLE_PSE_API_KEY=your_custom_search_api_key_here

# MCP Server Configuration
MCP_SERVER_PORT=8000
MCP_TRANSPORT=http
NODE_ENV=production

# Governance & Logging
GOVERNANCE_LOG_ENABLED=true
GOVERNANCE_LOG_PATH=/app/logs/governance.jsonl
DRIVEMEMORY_SYNC_ENABLED=true
DRIVEMEMORY_PATH=/app/logs/drivememory.jsonl

# oApp Integration
OAPP_API_BASE_URL=http://localhost:3002
OAPP_API_KEY=your_oapp_api_key_here
METAPLATFORM_QUEUE_URL=http://localhost:3003/queue

# Admin & Security
ADMIN_MODE_ENABLED=true
AUDIT_LOG_ENABLED=true
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60