        "automatedChecks": {
          "linting": "boolean",
          "typecheck": "boolean",
          "security": "boolean"
        }
      },
      "memoryAnchor": {
        "id": "string",
        "pluginStatus": "PUSHED|PENDING|FAILED",
        "driveMemoryStatus": "QUEUED|IMPORTED|FAILED"
      },
      "governance": {
        "approver": "string",
        "signoff": "boolean",
        "notes": "string",
        "nextActions": ["string"]
      }
    }
  },
