    "schema": {
      "closureId": "wt-[event]-closure-[YYYYMMDD]",
      "timestamp": "ISO8601",
      "event": {
        "type": "UATClosure|PhaseStepComplete|BranchMergeToMain",
        "phase": "string",
        "project": "string",
        "milestone": "string"
      },
      "evidence": {
        "screenshots": [
          {
            "path": "string",
            "description": "string",
            "timestamp": "ISO8601"
          }
        ],
        "logs": [
          {
            "type": "console|network|error",
            "path": "string",
            "summary": "string"
          }
        ],
        "artifacts": [
          {
            "type": "governance|memory|qa",
            "path": "string",
            "description": "string"
          }
        ]
      },
      "validation": {
        "testsPassed": "boolean",
        "criticalIssues": "number",
